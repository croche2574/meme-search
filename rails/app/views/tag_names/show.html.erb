<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <%= render @tag_name %>
    <%= link_to "Edit this tag name", edit_tag_name_path(@tag_name), class: "edit-button" %>
    <%= link_to "Back to tag names", tag_names_path, class: "back-button" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this tag name", @tag_name, method: :delete, class: "delete-button" %>
    </div>
  </div>
</div>
