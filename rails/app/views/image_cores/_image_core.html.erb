<div class="flex flex-row space-x-10 mb-5 mt-5"  id="<%dom_id image_core %>">
  <% absolute_path, image_name = absolute_image_path(image_core) %>
  <%= image_tag(absolute_path, size: "300", alt: image_name) %>
  <div class="flex flex-col my-auto items-start space-y-2">
    <div class="flex flex-row my-auto space-x-2">
      <%= form_with(url: generate_description_image_core_path(image_core.id), local: true) do |form| %>
        <% form.submit "generate description", class: "bg-blue-500 border hover hover:bg-cyan-500 cursor-pointer w-auto py-1 px-2 rounded-2xl"%>
      <% end %>
      <% div_id = "status-image-core-id-#{image_core.id}" %>
      <%= render partial: "generate_status", locals: {div_id: "status-image-core-id-#{image_core.id}", status: image_core.status} %>
    </div>
    <h3> Image description </h3>
    <textarea class="text-black" disabled rows=4 cols=20 id="description-image-core-id-<%=image_core.id%>">
    <%= image_core.description %>
    </textarea>
  </div>
  <div class="flex flex-col my-auto">
    <h3> Image tags </h3>
    <% image_tags = image_core.image_tags.map {|assoc| assoc.tag_name}.map {|item| {name: item.name, color: item.color}} %>
    <div class="flex flex-col space-y-3 mb-5 mt-5 mx-auto text-center w-auto">
      <% image_tags.each do |tag| %>
        <div class="text-black dark:text-white p-2 rounded-xl" style="background-color: <%= tag[:color] %>;">
          <%= tag[:name] %>
        </div>
      <% end %>
    </div>
  </div>
</div>