<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <% content_for :title, "Image cores" %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Image cores</h1>
    <%= link_to "New image core", new_image_core_path, class: "new-button" %>
  </div>
  <div id="image_cores" class="min-w-full">
    <% @image_cores.each do |image_core| %>
      <%= render image_core %>
      <p>
        <%= link_to "Show this image core", image_core, class: "show-button" %>
      </p>
    <% end %>
  </div>
</div>
