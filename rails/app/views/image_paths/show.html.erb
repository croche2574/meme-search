<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <%= render @image_path %>
    <%= link_to "Edit this image path", edit_image_path_path(@image_path), class: "edit-button" %>
    <%= link_to "Back to image paths", image_paths_path, class: "back-button" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this image path", @image_path, method: :delete, class: "delete-button" %>
    </div>
  </div>
</div>
