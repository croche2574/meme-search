<%= form_with(model: image_path, class: "contents") do |form| %>
  <div class="my-5">
    <div class="text-black dark:text-white">
      enter a valid local directory path (browser cannot verify its validity)
    </div>
    <div>
      <%= form.text_field :name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full text-black" %>
    </div>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
